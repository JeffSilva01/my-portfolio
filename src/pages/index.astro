---
import Link from "@components/ui/link.astro";
import heroImage from "assets/hero.png";
import Layout from "../layouts/Layout.astro";
import { Picture } from "astro:assets";
import ProjectCard from "@components/projectCard.astro";
---

<Layout title="Welcome to Astro.">
  <header class="w-full flex items-center justify-between max-w-96 m-auto">
    <a class="text-slate-500" href="https://jeffsilva01.dev/blog">Blog</a>
    <a class="text-slate-500" href="https://linkedin.com/in/jeffsilva01/"
      >Linkdedin</a
    >
    <a class="text-slate-500" href="https://github.com/jeffsilva01">GitHub</a>
    <a class="text-slate-500" href="https://wa.me/5585998655310">Whatsapp</a>
    <a class="text-slate-500" href="https://www.instagram.com/jeffsilva01.dev/"
      >Instagram</a
    >
  </header>
  <main>
    <div
      class="flex max-w-5xl mx-auto items-center w-full pt-16 pb-8 md:pt-12 md:pb-16 justify-between">
      <div class="py-6 md:order-1 hidden md:block">
        <Picture
          src={heroImage}
          alt="Astronaut in the air"
          widths={[200, 400, 600]}
          sizes="(max-width: 800px) 100vw, 620px"
          loading="eager"
          format="avif"
        />
      </div>
      <div>
        <strong
          class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
          Jefferson Silva
        </strong>
        <p class="text-lg mt-4 text-slate-600 max-w-xl">
          Astroship is a starter template for startups, marketing websites &
          landing pages.<wbr /> Built with Astro.build and TailwindCSS. You can quickly
          create any website with this starter.
        </p>
        <div class="mt-6 flex flex-col sm:flex-row gap-3">
          <Link
            href="https://linkedin.com/in/jeffsilva01/"
            target="_blank"
            class="flex gap-1 items-center justify-center"
            rel="noopener">
            <!-- <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" /> -->

            Linkdedin
          </Link>
          <Link
            size="lg"
            style="outline"
            rel="noopener"
            href="https://github.com/jeffsilva01"
            class="flex gap-1 items-center justify-center"
            target="_blank">
            <!-- <Icon class="text-black w-4 h-4" name="bx:bxl-github" /> -->
            GitHub Repo
          </Link>
        </div>
      </div>
    </div>
    <section class="max-w-5xl mx-auto">
      <h2
        class="text-3xl lg:text-4xl font-bold lg:tracking-tight xl:tracking-tighter">
        Projetos
      </h2>
      <p class="text-slate-500">
        Um pouco do que j√° fiz durante a minha jornada
      </p>
      <div class="grid pt-4 mb-8 grid-cols-3 gap-4">
        <ProjectCard />
        <ProjectCard />
        <ProjectCard />
        <ProjectCard />
        <ProjectCard />
        <ProjectCard />
      </div>
    </section>
    <footer class="max-w-5xl text-center mx-auto">
      <span>Tecnologias</span>
      <div></div>
      <div class="bg-black h-7 w-full rounded-t-md"></div>
    </footer>
  </main>
</Layout>
